{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2016",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "@mt-rectify-framework/comp/*": ["src/app/components/*/public_api"],
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "@mt-rectify-framework.js",
    "flatModuleId": "@mt-rectify-framework"
  },
  "files": [
    "./public_api.ts"
  ]
}
