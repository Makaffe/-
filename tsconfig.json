{
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "projects/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared": [
        "src/app/shared/index"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@core": [
        "src/app/core/index"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@mt-rectify-framework/comp/*": [
        "src/app/components/*/public_api"
      ],
      "@mt-rectify-framework/common/*": ["src/app/common/*/public_api"]
    }
  }
}
